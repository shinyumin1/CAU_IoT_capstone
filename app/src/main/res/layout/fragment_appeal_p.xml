<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".appealS">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="top|start">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="결석: 0~40%"
            android:textStyle="bold"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지각: 41~70%"
            android:textStyle="bold"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="출석: 71~100%"
            android:textStyle="bold"
            android:textSize="12sp"/>
    </LinearLayout>
    <!--리사이클러뷰-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_p"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="85dp"
        android:padding="10dp"/>

    <!--android:visibility="gone"-->

    <LinearLayout
        android:id="@+id/appeal_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="20dp"
        android:layout_marginTop="175dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/option1"
            android:layout_width="130dp"
            android:layout_height="75dp"
            android:background="@drawable/blue_box_small"
            android:gravity="center"
            android:text="출석"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/option2"
            android:layout_width="130dp"
            android:layout_height="75dp"
            android:background="@drawable/blue_box_small"
            android:gravity="center"
            android:text="지각"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/option3"
            android:layout_width="130dp"
            android:layout_height="75dp"
            android:background="@drawable/blue_box_small"
            android:gravity="center"
            android:text="결석"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/student_status_button"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="출결 상태 변경하기"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="60dp"
        android:background="@drawable/blue_box"/>

</FrameLayout>