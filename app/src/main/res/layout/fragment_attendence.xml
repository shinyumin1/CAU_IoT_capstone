<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Home.Home">


    <LinearLayout
        android:id="@+id/dateLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingStart="20dp">

        <TextView
            android:id="@+id/todayDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025년 08월 06일 수요일"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/calendarButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:contentDescription="달력"
            android:src="@drawable/uil_calender"
            android:visibility="gone"/>

        <Button
            android:id="@+id/attendence_check_s"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/attend_appeal_blue_box"
            android:text="출결 이의 신청"
            android:textSize="13dp"
            android:visibility="gone"
            android:textStyle="bold" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/dateLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_take_posts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/dateLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/student_appeal_editbox"
        app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
        android:id="@+id/student_appeal_editbox"
        android:layout_width="346dp"
        android:layout_height="130dp"
        android:background="@drawable/appeal_box"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/rv_take_posts"
        app:layout_constraintBottom_toTopOf="@id/student_appeal_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_student_appeal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="이의 신청할 과목을 선책한 후, 사유를 작성해주세요.(100자 내외)"
            android:textSize="14.7sp"
            android:textStyle="bold"
            android:inputType="textMultiLine"
            android:maxLines="4"/>
    </LinearLayout>
    <Button
        android:id="@+id/student_appeal_button"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="이의 신청 완료"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="@drawable/blue_box"
        app:layout_constraintTop_toBottomOf="@id/student_appeal_editbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>